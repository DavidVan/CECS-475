<Window x:Class="Cecs475.BoardGames.WpfApplication.LoadGames"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cecs475.BoardGames.WpfApplication"
        mc:Ignorable="d"
        Title="Loading games, please wait..." Height="100" Width="400"
        ShowInTaskbar="False"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="YellowGreen"
        Loaded="Window_Loaded">
    <Grid>
        <Label FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">
            Loading games, please wait...
        </Label>
    </Grid>
</Window>
